#!/usr/bin/env bash
# Creates a note file with boilerplate code inside.
# Note: This script assumes you have a NOTESDIR variable that points to the
#       root directory of your notes.
# TODO: Don't append to file if it already exists. Throw error instead.
echo "<link rel='stylesheet' href='$(for (( i=1; i<=$(depth $NOTES_HOME); i++ )); do echo -n ../; done)shared/style.css'>" >> $1
